{
  "name": "mongodb-chatbot-server",
  "version": "0.1.3",
  "license": "Apache-2.0",
  "description": "Chat server for the MongoDB Docs AI chatbot.",
  "author": "MongoDB, Inc.",
  "keywords": [],
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist/ && tsc",
    "postbuild": "cp ./src/processors/MongoDbUserQueryPreprocessorResponse.ts ./dist/processors/",
    "dev": "nodemon src/index.ts",
    "format": "prettier ./src --write",
    "format:check": "prettier ./src --check",
    "lint": "eslint ./src --ext js,jsx,ts,tsx --report-unused-disable-directives",
    "start": "pm2-runtime ./dist/index.js",
    "test": "jest --forceExit",
    "test:llmQualitative": "jest --config jest.config.llmQualitative.js --forceExit",
    "release": "release-it",
    "publish:package": "npm run build && npm publish --access public"
  },
  "dependencies": {
    "@azure/openai": "^1.0.0-beta.5",
    "chat-core": "file:../chat-core",
    "chat-server": "file:../chat-server",
    "common-tags": "^1.8.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "lodash.clonedeep": "^4.5.0",
    "mongodb": "^5.7.0",
    "openai": "^3.2.1",
    "pm2": "^5.3.0"
  },
  "bundleDependencies": [
    "chat-core",
    "chat-server"
  ],
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@types/common-tags": "^1.8.1",
    "@types/connect-timeout": "^0.0.37",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-slow-down": "^1.3.2",
    "@types/jest": "^29.5.2",
    "@types/lodash.clonedeep": "^4.5.7",
    "@types/stream-json": "^1.7.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "babel-jest": "^29.5.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "express-slow-down": "^1.6.0",
    "jest": "^29.6.1",
    "mongodb-memory-server": "^8.12.2",
    "node-mocks-http": "^1.12.2",
    "nodemon": "^3.0.1",
    "prettier": "^2.8.7",
    "release-it": "^16.1.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "yaml": "^2.3.1"
  }
}
